<%- include("../partials/header") %>
<div class="container">
  <div class="thumbnail">
    <div class="header">
      <h1><a class="header" href="/khojo/<%= question.id %>"><%= question.question %></a></h1>
    </div>
    <div class="content">
      <div class="description">
        <h4>
          <p><%- question.description %></p>
        </h4>
      </div>
      <div class="extra">
        <span>Asked by: <a href="#"><%= question.author.username %></a></span>
        <span class="pull-right"><%= question.created.toDateString() %></span>
      </div>
      <div class="extra">
        <div class="meta">
          <span class="glyphicon glyphicon-thumbs-up"></span> <%= question.upVotes %>
          <span class="glyphicon glyphicon-thumbs-down"></span> <%= question.downVotes %>
        </div>
      </div>
    </div>
    <div class="well">
      <div class="text-right">
        <a class="btn btn-success" href="/khojo/<%= question._id %>/comments/new">Add A Comment</a>
      </div>
      <hr />
      <% question.comments.forEach(function(comment){ %>
      <div class="row">
        <div class="col-md-12">
          <%= comment.author.username %>
          <span class="pull-right">10 days ago</span>
          <p><%= comment.text %></p>
        </div>
      </div>
      <hr>
      <% }); %>
    </div>
  </div>
</div>
<%- include("../partials/footer") %>

